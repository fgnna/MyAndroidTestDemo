<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/m_conditional_type_1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="3.3"
        android:text="asdfasdfasdfads"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/m_conditional_type_2"/>
    <TextView
        android:id="@+id/m_conditional_type_2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="asdfasdfaads"
        app:layout_constraintHorizontal_weight="3.4"
        app:layout_constraintLeft_toRightOf="@+id/m_conditional_type_1"
        app:layout_constraintRight_toLeftOf="@+id/m_conditional_type_3" />
    <TextView
        android:id="@+id/m_conditional_type_3"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="3.3"
        android:text="asdfasdfasdfads"
        app:layout_constraintLeft_toRightOf="@+id/m_conditional_type_2"
        app:layout_constraintRight_toRightOf="parent"
    />

    <View
        android:layout_width="3px"
        android:layout_height="20dp"
        android:background="#666666"
        app:layout_constraintLeft_toLeftOf="@+id/m_conditional_type_1"
    />
    <View
        android:layout_width="3px"
        android:layout_height="20dp"
        android:background="#666666"
        app:layout_constraintRight_toRightOf="@+id/m_conditional_type_1"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#666666"
        app:layout_constraintBottom_toBottomOf="@+id/m_conditional_type_1"
    />

    <LinearLayout

        android:id="@+id/conditional_1_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/m_conditional_type_1"
        app:layout_constraintRight_toRightOf="@id/m_conditional_type_1"
        app:layout_constraintTop_toBottomOf="@id/m_conditional_type_1"
        android:orientation="vertical"
        android:background="#7f000000"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfasdfsadf"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="asdfasdfsadf"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="asdfasdfsadf"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/conditional_2_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#7f000000"
        app:layout_constraintLeft_toLeftOf="@id/m_conditional_type_2"
        app:layout_constraintRight_toRightOf="@id/m_conditional_type_2"
        app:layout_constraintTop_toBottomOf="@id/m_conditional_type_2"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfasdfsadf"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="asdfasdfsadf"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/conditional_3_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#7f000000"
        app:layout_constraintLeft_toLeftOf="@id/m_conditional_type_3"
        app:layout_constraintRight_toRightOf="@id/m_conditional_type_3"
        app:layout_constraintTop_toBottomOf="@id/m_conditional_type_3"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="asdfasdfsadf"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</merge>
